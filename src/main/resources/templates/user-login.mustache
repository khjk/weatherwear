<!DOCTYPE html>
<head>
    {{>layout/header}}
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
<!--  nav  -->
{{>layout/nav}}

<div class="cont">
    <div class="form sign-in">
        <form id="loginForm">
            <h2>Welcome back,</h2>
            <label>
                <span>Email</span>
                <input type="email" id="login_id"/>
            </label>
            <label>
                <span>Password</span>
                <input type="password" id="login_password"/>
            </label>
            <button type="button" id="btn-login" class="submit">Sign In</button>
            <button type="button" class="fb-btn"><a href="/oauth2/authorization/naver">Connect with <span>Naver</span></a></button>
        </form>
    </div>

    <div class="sub-cont">
        <div class="img">
            <div class="img__text m--up">
                <h2>New here?</h2>
                <p>Sign up and discover great amount of new opportunities!</p>
            </div>
            <div class="img__text m--in">
                <h2>One of us?</h2>
                <p>If you already has an account, just sign in. We've missed you!</p>
            </div>
            <div class="img__btn">
                <span class="m--up">Sign Up</span>
                <span class="m--in">Sign In</span>
            </div>
        </div>

        <div class="form sign-up">
            <form id="signupForm">
                <h2>Time to feel like home,</h2>
                <label>
                    <span>Name</span>
                    <input type="text" id="signup_name"/>
                    <span style="color: red;"></span>
                </label>
                <label>
                    <span>Email</span>
                    <input type="email" id="signup_id"/>
                    <span id="email_val_text" style="color: red;"></span>
                    <button type="button" class="check" id="check">중복검사</button>
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" id="signup_password"/>
                    <span style="color: red;"></span>
                </label>
                <button type="button" id="btn-signup"  class="submit">Sign Up</button>
                <button type="button" class="fb-btn"><a href="/oauth2/authorization/naver">Join with <span>Naver</span></a></button>
            </form>
        </div>

    </div>
</div>

<script type= "text/javascript">
  document.querySelector('.img__btn').addEventListener('click', function() {
  document.querySelector('.cont').classList.toggle('s--signup');
});
</script>
<script src="/js/login.js"></script>
{{>layout/footer}}
</body>
</html>