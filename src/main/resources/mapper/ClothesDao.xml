<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kitri.weatherwear.dao.ClothesDao">

	<resultMap id="map" type="com.kitri.weatherwear.dto.Clothes">


	</resultMap>

	<!-- clothes_sort 테이블 전체 호출 -->
    <select id="selectAllClothes" resultType="com.kitri.weatherwear.dto.Clothes">
		SELECT *
		FROM clothes_sorts
	</select>

	<!-- 옷 종류별로 호출 -->
	<select id="selectCsort" parameterType="String" resultType="com.kitri.weatherwear.dto.Clothes" >
		SELECT *
		FROM clothes_sorts
		WHERE c_sort=#{sort}
	</select>

	<!-- wear-code 호출 -->
	<select id="getWcode" parameterType="int" resultType="int" >
		SELECT wear_code
		FROM clothes
		WHERE outer_wear = <choose>
							<when test="outer == 0">
								''
							</when>
							<otherwise>
								(select c_name from clothes_sorts where c_id = #{outer})
							</otherwise>
							</choose>
		AND top_wear = <choose>
						<when test="top == 0">
							''
						</when>
						<otherwise>
							(select c_name from clothes_sorts where c_id = #{top})
						</otherwise>
						</choose>
		AND bottom_wear = <choose>
							<when test="bottom == 0">
								''
							</when>
							<otherwise>
								(select c_name from clothes_sorts where c_id = #{bottom})
							</otherwise>
						</choose>
	</select>

	<!-- wear-code의 옷 객체 불러오기 -->
	<select id="selectGetWcode" parameterType="int" resultType="com.kitri.weatherwear.dto.Clothes">
		select *
		from clothes_sorts
		where c_name IN (select outer_wear from clothes where wear_code = #{wCode})
		OR c_name IN (select top_wear from clothes where wear_code = #{wCode})
		OR c_name IN (select bottom_wear from clothes where wear_code = #{wCode})
	</select>


	<!-- 비 올때 우산 이미지 링크 불러오기 -->
	<select id="selectRainImg" resultType="String" >
		SELECT c_img
		FROM clothes_sorts
		WHERE c_sort= "우산"
	</select>


</mapper>